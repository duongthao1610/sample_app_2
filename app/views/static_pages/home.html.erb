<% provide :title, t(".home_title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micro_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".welcome" %></h1>
  <h2>
    <%= t ".this_is" %>
    <%= link_to t(".ruby_on"), Settings.static_pages.ror_link %>
    <%= t ".samapp" %>
  </h2>
  <%= link_to t(".sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo"), Settings.static_pages.ror_link %>
<%= link_to image_tag("kitten.jpg", alt: "A Cat") %>
<% end %>
